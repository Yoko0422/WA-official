<%= form_with(model: place, local: true) do |form| %>
  
  <% if place.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(place.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% place.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
 <% end %>
    
    <div class="form-group">
      <p><span class="label"><strong>名前:</strong></span></p>
      <p><%= form.text_field :name %></p>
    </div>
    
    <div class="form-group">
      <p><span class="label"><strong>ウェブサイトアドレス:</strong></span></p>
      <p><%= form.text_field :url %></p>
    </div>
    
    <div class="form-group">
      <p><span class="label"><strong>住所:</strong></span></p>
      <p><%= form.text_field :address %></p>
    </div>
  
    <div class="form-group">
      <p><span class="label"><strong>テキスト:</strong></span></p>
      <p><%= form.text_area :content, wrap: 'hard', size: "80x10" , class: 'textarea' %></p>
    </div>

    <p>　</p>
    
    <div class="actions">
      <%= form.submit '上記の内容で登録', class: 'btn-flat-border' %>
    </div>
<% end %>
